<li><label for="name">Name:</label></li>
<li><input type="text" name="firstname" size="20" value="FirstName" onFocus="if(this.value=='FirstName'){this.value=''}" onBlur="if(this.value==''){this.value='FirstName'}">
<input type="text" name ="lastname" size="15" value="LastName" onFocus="if(this.value=='LastName'){this.value=''}" onBlur="if(this.value==''){this.value='LastName'}"></li>
